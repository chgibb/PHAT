{
    "compilerOptions" : 
    {
        "module" : "commonjs",
        "moduleResolution": "node",
        "target" : "es6",
        "noImplicitAny" : true,
        "noImplicitReturns" : true,
        "noImplicitThis" : true,
        "noUnusedLocals" : true,
        "noUnusedParameters" : true,
        "removeComments": true,
        "sourceMap" : false,
	    "listFiles" : true
    },
    "exclude": 
    [
        "node_modules"
    ]
}
